## Special globus installation directories

scriptsysconfdir = $(GLOBUS_INSTALL_PATH)/etc
## scriptsysconf = [ PROGRAMS,SCRIPTS ]

flavorincludedir = $(GLOBUS_INSTALL_PATH)/include/$(GLOBUS_FLAVOR_NAME)
## flavorinclude = [ HEADERS ]

pkgdir = $(GLOBUS_INSTALL_PATH)/etc/globus_packages/$(PACKAGE)
## pkg = [ DATA ]

aclocaldir = $(GLOBUS_INSTALL_PATH)/share/globus_aclocal
## aclocal = [ DATA ]

docdir = $(GLOBUS_INSTALL_PATH)/share/doc
## doc = [ DATA ]

LINK_BAK = orig