deploy_prefix=@deploy_prefix@ # This line is overwritten during deployment
deployed='FALSE'              # This line is overwritten during deployment

    sslpath="${GLOBUS_SSL_PATH}"
    install="${GLOBUS_INSTALL_PATH}"
    if [ "X${deployed}" = "XTRUE" ]; then
	if [ -z "${GLOBUS_DEPLOY_PATH}" ]; then
	    echo "ERROR: environment variable GLOBUS_DEPLOY_PATH not defined"  1>&2
	    exit 1
	fi
	if [ -z "${GLOBUS_INSTALL_PATH}" -o -z "${GLOBUS_SSL_PATH}" ]; then
	    if [ ! -r "${GLOBUS_DEPLOY_PATH}/etc/globus-paths.sh" ]; then
	        echo "ERROR: cannot read ${GLOBUS_DEPLOY_PATH}/etc/globus-paths.sh" 1>&2
		exit 1
	    fi
	    . "${GLOBUS_DEPLOY_PATH}/etc/globus-paths.sh"
	    if [ -z "${GLOBUS_INSTALL_PATH}" ]; then
		echo "ERROR: environment variable GLOBUS_INSTALL_PATH not defined"  1>&2
		echo "in ${GLOBUS_DEPLOY_PATH}/etc/globus-paths.sh"         1>&2
		exit 1
	    fi
	fi
    else 
	if [ -z "${GLOBUS_INSTALL_PATH}" ]; then
	    echo "WARNING: environment variable GLOBUS_INSTALL_PATH not defined"  1>&2
	    # we really should do a exit 1 here, but for easier development
	    # testing, fall back on ${prefix}.
	    GLOBUS_INSTALL_PATH=@prefix@
	fi
	if [ -z "${GLOBUS_SSL_PATH}" ]; then
	    if [ ! -r "${GLOBUS_INSTALL_PATH}/etc/globus-paths.sh" ]; then
	        echo "ERROR: cannot read ${GLOBUS_INSTALL_PATH}/etc/globus-paths.sh" 1>&2
		exit 1
	    fi
	    . "${GLOBUS_INSTALL_PATH}/etc/globus-paths.sh"
	    if [ -z "${GLOBUS_SSL_PATH}" ]; then
		echo "ERROR: environment variable GLOBUS_SSL_PATH not defined"  1>&2
		echo "in ${GLOBUS_INSTALL_PATH}/etc/globus-paths.sh"         1>&2
		exit 1
	    fi

	fi
    fi
    if [ -n "${install}" ]; then
        GLOBUS_INSTALL_PATH="${install}"
    fi
    if [ -n "${sslpath}" ]; then
        GLOBUS_SSL_PATH="${sslpath}"
    fi
    if [ "X${deployed}" = "XTRUE" ]; then
	export GLOBUS_DEPLOY_PATH
	prefix=${deploy_prefix}
	exec_prefix=${deploy_prefix}
    else
	prefix="${GLOBUS_INSTALL_PATH}"
	exec_prefix=@exec_prefix@
    fi
    export GLOBUS_INSTALL_PATH
    sbindir=${exec_prefix}/sbin
    bindir=${exec_prefix}/bin
    libdir=${exec_prefix}/lib
    libexecdir=${exec_prefix}/libexec
    includedir=${exec_prefix}/include
    datadir=${prefix}/share
    sysconfdir=${prefix}/etc
    sharedstatedir=${prefix}/com
    localstatedir=${prefix}/var
    tmpdir=${prefix}/tmp

