<?xml version="1.0"?>

<!-- ===================================================================

Notes:
   This is a build file for use with the Jakarta Ant build tool.

Prerequisites:

   jakarta-ant from http://jakarta.apache.org


Build Instructions:

   This file is automatically called at the end of the deployment
   of the corresponding component's gar (see build-packages.xml).

==================================================================== -->
<project default="all" basedir=".">

    <property environment="env"/>
    
    <property file="build.properties"/>
    <property file="${user.home}/build.properties"/>
    
    <property name="env.GLOBUS_LOCATION" value="."/>
    <property name="deploy.dir" location="${env.GLOBUS_LOCATION}"/>
    <property name="abs.deploy.dir" location="${deploy.dir}"/>
    <property name="build.launcher" 
        location="${abs.deploy.dir}/share/globus_wsrf_common/build-launcher.xml"/>

    <target name="setup" >
        <!-- Java WS Core Reports -->
        <ant antfile="${build.launcher}" 
             target="generateLauncher">
            <property name="launcher-name" value="jwscore-service-report"/>
            <property name="class.name" 
                value="org.globus.usage.report.ServiceReport"/>
        </ant>
        <ant antfile="${build.launcher}" 
             target="generateLauncher">
            <property name="launcher-name" value="jwscore-container-report"/>
            <property name="class.name" 
                value="org.globus.usage.report.ContainerReport"/>
        </ant>
        <ant antfile="${build.launcher}" 
             target="generateLauncher">
            <property name="launcher-name" value="jwscore-container-up-report"/>
            <property name="class.name" 
                value="org.globus.usage.report.ContainerUpReport"/>
        </ant>
        <ant antfile="${build.launcher}" 
             target="generateLauncher">
            <property name="launcher-name" value="jwscore-container-up-2-report"/>
            <property name="class.name" 
                value="org.globus.usage.report.ContainerUpReportV2"/>
        </ant>
        <ant antfile="${build.launcher}" 
             target="generateLauncher">
            <property name="launcher-name" value="jwscore-container-long-up-report"/>
            <property name="class.name" 
                value="org.globus.usage.report.ContainerLongUpReport"/>
        </ant>
        <ant antfile="${build.launcher}" 
             target="generateLauncher">
            <property name="launcher-name" value="jwscore-container-long-up-2-report"/>
            <property name="class.name" 
                value="org.globus.usage.report.ContainerLongUpReportV2"/>
        </ant>
        <ant antfile="${build.launcher}" 
             target="generateLauncher">
            <property name="launcher-name" value="jwscore-container-event-report"/>
            <property name="class.name" 
                value="org.globus.usage.report.ContainerEventReport"/>
        </ant>


        <!-- RFT Reports -->
        <ant antfile="${build.launcher}"
             target="generateLauncher">
            <property name="launcher-name"
            value="rft-file-report"/>
            <property name="class.name"
                value="org.globus.usage.report.rft.FileReport"/>
        </ant>
        <ant antfile="${build.launcher}"
             target="generateLauncher">
            <property name="launcher-name"
            value="rft-domain-report"/>
            <property name="class.name"
                value="org.globus.usage.report.rft.DomainReport"/>
        </ant>


        <!-- Gram Reports -->
        <ant antfile="${build.launcher}"
             target="generateLauncher">
            <property name="launcher-name"
            value="gram-jobtype-report"/>
            <property name="class.name"
                value="org.globus.usage.report.gram.JobTypeReport"/>
        </ant>
        <ant antfile="${build.launcher}"
             target="generateLauncher">
            <property name="launcher-name"
            value="gram-features-report"/>
            <property name="class.name"
                value="org.globus.usage.report.gram.FeaturesReport"/>
        </ant>
        <ant antfile="${build.launcher}"
             target="generateLauncher">
            <property name="launcher-name"
            value="gram-error-report"/>
            <property name="class.name"
                value="org.globus.usage.report.gram.ErrorReport"/>
        </ant>
        <ant antfile="${build.launcher}"
             target="generateLauncher">
            <property name="launcher-name"
            value="gram-scheduler-report"/>
            <property name="class.name"
                value="org.globus.usage.report.gram.SchedulerReport"/>
        </ant>
        <ant antfile="${build.launcher}"
             target="generateLauncher">
            <property name="launcher-name"
            value="gram-domain-report"/>
            <property name="class.name"
                value="org.globus.usage.report.gram.DomainReport"/>
        </ant>


       <!-- GridFTP Reports -->
        <ant antfile="${build.launcher}"
             target="generateLauncher">
            <property name="launcher-name"
            value="gftp-buffer-report"/>
            <property name="class.name"
                value="org.globus.usage.report.gftp.BufferReport"/>
        </ant>
        <ant antfile="${build.launcher}"
             target="generateLauncher">
            <property name="launcher-name"
            value="gftp-host-report"/>
            <property name="class.name"
                value="org.globus.usage.report.gftp.HostReport"/>
        </ant>
        <ant antfile="${build.launcher}"
             target="generateLauncher">
            <property name="launcher-name"
            value="gftp-response-report"/>
            <property name="class.name"
                value="org.globus.usage.report.gftp.ResponseReport"/>
        </ant>
        <ant antfile="${build.launcher}"
             target="generateLauncher">
            <property name="launcher-name"
            value="gftp-stripe-report"/>
            <property name="class.name"
                value="org.globus.usage.report.gftp.StripeReport"/>
        </ant>
        <ant antfile="${build.launcher}"
             target="generateLauncher">
            <property name="launcher-name"
            value="gftp-statistics-report"/>
            <property name="class.name"
                value="org.globus.usage.report.gftp.Statistics"/>
        </ant>
    </target>
        
</project>
