<?xml version="1.0"?>

<project default="all">

 <target name="gnuplot-container">
   <xslt style="container/gnuplot-uniqueservices-inst.xsl" 
         in="${container.xml}"
         out="${user.dir}/uniqueservices.gnuplot"/>
   <xslt style="container/gnuplot-uniqueservices-data.xsl" 
         in="${container.xml}"
         out="${user.dir}/uniqueservices.data"/>

   <xslt style="container/gnuplot-containers-inst.xsl" 
         in="${container.xml}"
         out="${user.dir}/containers.gnuplot"/>
   <xslt style="container/gnuplot-containers-data.xsl" 
         in="${container.xml}"
         out="${user.dir}/containers.data"/>

   <xslt style="container/gnuplot-services-inst.xsl" 
         in="${container.xml}"
         out="${user.dir}/services.gnuplot"/>
   <xslt style="container/gnuplot-services-data.xsl" 
         in="${container.xml}"
         out="${user.dir}/services.data"/>
 </target>

 <target name="gnuplot-uptime">
   <xslt style="uptime/gnuplot-uptime-instructions.xsl" 
         in="${uptime.xml}"
         out="${user.dir}/uptime.gnuplot"/>
   <xslt style="uptime/gnuplot-uptime-data.xsl" 
         in="${uptime.xml}"
         out="${user.dir}/uptime.data"/>
 </target>

 <target name="gnuplot-service">
   <xslt style="service/gnuplot-service-instructions.xsl" 
         in="${service.xml}"
         out="${user.dir}/service.gnuplot"/>
   <xslt style="service/gnuplot-service-data.xsl" 
         in="${service.xml}"
         out="${user.dir}/service.data"/>
 </target>

 <target name="gnuplot-event">
   <xslt style="event/gnuplot-event-instructions.xsl" 
         in="${event.xml}"
         out="${user.dir}/event.gnuplot"/>
   <xslt style="event/gnuplot-event-data.xsl" 
         in="${event.xml}"
         out="${user.dir}/event.data"/>
 </target>

</project>
