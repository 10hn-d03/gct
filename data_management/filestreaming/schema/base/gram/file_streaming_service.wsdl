<?xml version="1.0" encoding="UTF-8"?>
<definitions name="FileStreaming"
             targetNamespace="http://www.globus.org/namespaces/filestreaming/file_streaming"
              xmlns:file-streaming-types="http://www.globus.org/namespaces/filestreaming/file_streaming_types"
              xmlns:file-streaming-bindings="http://www.globus.org/namespaces/filestreaming/file_streaming_bindings"
              xmlns:grid-service-bindings="http://ogsa.gridforum.org/service/grid_service/bindings"
              xmlns:notification-source-bindings="http://ogsa.gridforum.org/notification/notification_source/bindings"
              xmlns:auth-bindings="http://ogsa.globus.org/security/authentication/bindings"
              xmlns="http://schemas.xmlsoap.org/wsdl/"
              xmlns:soap="http://schemas.xmlsoap.org/wsdl/soap/">


<import location="../../base/gram/file_streaming_bindings.wsdl"
        namespace="http://www.globus.org/namespaces/filestreaming/file_streaming_bindings"/>

<import location="../../base/gram/file_streaming_types.wsdl"
        namespace="http://www.globus.org/namespaces/filestreaming/file_streaming_types"/>

<import location="../../core/service/grid_service_bindings.wsdl"
        namespace="http://ogsa.gridforum.org/service/grid_service/bindings"/>

<import location="../../core/notification/notification_source_bindings.wsdl"
        namespace="http://ogsa.gridforum.org/notification/notification_source/bindings"/>

<import location="../../security/authentication/gss_secure_conversation_bindings.wsdl"
        namespace="http://ogsa.globus.org/security/authentication/bindings"/>

<service name="FileStreamingService">
  <documentation>Globus File Streaming Service </documentation>

  <port binding="file-streaming-bindings:FileStreamingSOAPBinding"
        name="FileStreamingPort">
    <soap:address location="http://localhost:8443/ogsa/services"/>
  </port>

  <port binding="grid-service-bindings:GridServiceSOAPBinding"
        name="GridServicePort">
    <soap:address location="http://localhost:8443/ogsa/services"/>
  </port>

  
  <port binding="notification-source-bindings:NotificationSourceSOAPBinding"
        name="NotificationSourcePort">
    <soap:address location="http://localhost:8080/ogsa/services"/>
  </port>

<port binding="auth-bindings:SecureContextEstablishmentSOAPBinding"
        name="SecureContextEstablishmentPort">
   <soap:address location="http://localhost:8080/ogsa/services"/>
</port>

</service>

</definitions>
