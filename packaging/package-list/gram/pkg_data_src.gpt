<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE gpt_package_metadata SYSTEM "package.dtd">

<gpt_package_metadata Format_Version="0.01" Name="gram">

  <Aging_Version Age="0" Major="0" Minor="2" />
  <Description> GT3 GRAM </Description>
  <Functional_Group >Execution</Functional_Group>
  <Version_Stability Release="alpha" />

  <src_pkg >

    <Build_Environment >
      <cflags ></cflags>
      <external_includes ></external_includes>
      <pkg_libs ></pkg_libs>
      <external_libs ></external_libs>
    </Build_Environment>

    <With_Flavors build="no" />

    <Version_Label>0.0.2</Version_Label>

    <Source_Dependencies Type="compile" >
      <Dependency Name="core"><Version><Simple_Version Major="0"></Simple_Version></Version></Dependency>
      <Dependency Name="mds-db"><Version><Simple_Version Major="0"></Simple_Version></Version></Dependency>
      <Dependency Name="filestreaming"><Version><Simple_Version Major="0"></Simple_Version></Version></Dependency>
      <Dependency Name="grim"><Version><Simple_Version Major="0"></Simple_Version></Version></Dependency>
      <Dependency Name="providers"><Version><Simple_Version Major="0"></Simple_Version></Version></Dependency>
      <Dependency Name="aggregators"><Version><Simple_Version Major="0"></Simple_Version></Version></Dependency>
    </Source_Dependencies>

    <Build_Instructions>

	    <Build_Step> ant -Dogsa.root=INSTALLDIR_GPTMACRO</Build_Step>
	    <Build_Step> mkdir -p INSTALLDIR_GPTMACRO/gars/ </Build_Step>
	    <Build_Step> cp build/lib/gram.gar INSTALLDIR_GPTMACRO/gars/ </Build_Step>
	    <Build_Step> cp build/mmjfsLib/mmjfs.gar INSTALLDIR_GPTMACRO/gars/ </Build_Step>
	    <Build_Step> cp build/jmLib/jm.gar INSTALLDIR_GPTMACRO/gars/ </Build_Step>
	    <Build_Step> ant -f INSTALLDIR_GPTMACRO/build.xml deployGar -Dgar.name=INSTALLDIR_GPTMACRO/gars/gram.gar </Build_Step>
	    <Build_Step> ant -f INSTALLDIR_GPTMACRO/build-packages.xml deployGar -Dgar.name=INSTALLDIR_GPTMACRO/gars/mmjfs.gar </Build_Step>
	    <Build_Step> ant -f INSTALLDIR_GPTMACRO/build-packages.xml deployGar -Dgar.name=INSTALLDIR_GPTMACRO/gars/jm.gar </Build_Step>
	    <Build_Step> cp test.xml INSTALLDIR_GPTMACRO/etc/ </Build_Step>
	    <Build_Step> chmod +x INSTALLDIR_GPTMACRO/etc/globus-gram-fork-provider </Build_Step>
	    <Build_Step> chmod +x INSTALLDIR_GPTMACRO/etc/globus-gram-pbs-provider </Build_Step>

    </Build_Instructions>

  </src_pkg >

</gpt_package_metadata>
