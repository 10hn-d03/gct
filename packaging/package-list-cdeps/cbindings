name=c-binding
subdir=ogsa-c/build_tools
build="
export CVS_RSH=\"\"; \
export
CVSROOT=\":pserver:anonymous@cvs.globus.org:/home/globdev/CVS/globus-packages\"; \
cvs -d$CVSROOT co side_tools/build-autotools; \
./side_tools/build-autotools; \
export PATH=$PWD/autotools/bin:$PATH; \
export GPT_LOCATION=$PWD/gpt-2.2.5; \
export GLOBUS_LOCATION=$PWD/gt2-installation; \
./cvs-build-ogsa -force gcc32dbg \
cd binary_packages; \
$GPT_LOCATION/sbin/gpt-bundle -bindir=.
-output=ogsa_cbindings_bin_bundle.tar.gz `cat packaging_list | xargs`;
cd ../source_packages; \
$GPT_LOCATION/sbin/gpt-bundle -srdir=.
-output=ogsa_cbindings_src_bundle.tar.gz
`cat packaging_list | xargs`"
gar="c-bindings.tar.gz"
